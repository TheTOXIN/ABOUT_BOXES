<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sklad"
    tools:context="baklashka.about_boxes.MainActivity">

    <TextView
        android:id="@+id/version"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/version"
        android:paddingTop="2dp"
        android:paddingLeft="4dp"
        android:text="@string/gameVersion"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/play"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:visibility="invisible"
            android:background="@drawable/play" />

        <ImageButton
            android:id="@+id/achivments"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:visibility="invisible"
            android:background="@drawable/achivments" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:visibility="invisible"
            android:background="@drawable/settings" />

    </LinearLayout>

</RelativeLayout>
